# Application
APP_PORT=3000
APP_BASE_URL=http://localhost:3000
NODE_ENV=development

# API
API_PORT=3001
API_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql://estoque_user:estoque_pass@localhost:5432/estoque_hsi
DATABASE_URL_DOCKER=postgresql://estoque_user:estoque_pass@db:5432/estoque_hsi

# Redis (para jobs)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=change_me_in_production_use_strong_random_string
JWT_EXPIRES_IN=7d

# Storage
STORAGE_DIR=./uploads
STORAGE_MAX_SIZE_MB=50

# SMTP (opcional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@estoque-hsi.local

# Observabilidade
SENTRY_DSN=
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
